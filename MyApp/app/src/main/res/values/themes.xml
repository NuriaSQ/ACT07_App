<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GTrackz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
    </style>

    <style name="Theme.GTrackz.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_splash_screen_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/gtrackz_logo_anim</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.GTrackz</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

    </style>

</resources>
