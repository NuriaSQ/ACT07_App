<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/open_menu"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/menuTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/menu_title"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/profileTopButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/open_profile"
                android:src="@drawable/ic_user"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/home_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/profile_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/collectionsButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/collections_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/wishlistButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/wishlist_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/forumsButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/forums_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/exploreButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/explore_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/notificationsButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/notifications_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_default_button"
                android:text="@string/settings_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/black"
                android:text="@string/logout_button_text"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/closeAppButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/app_exit_button"
                android:text="@string/close_app_button_text"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
